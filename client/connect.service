[Unit]
Description="Consul Service Mesh Envoy Sidecarr"

Requires=network-online.target
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/local/bin/consul connect envoy -token {{app.acl}} -sidecar-for {{app.servicename}}
KillMode=process
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target